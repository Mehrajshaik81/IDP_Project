@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<style>

    .btn-outline-primary-custom {
        color: var(--primary);
        border: 1px solid var(--primary);
        background-color: #284B63;
        color: var(--text-light);
    }

        .btn-outline-primary-custom:hover {
            background-color: var(--primary);
            color: var(--text-light);
        }
    /* Define custom CSS variables for consistency */
    :root {
        --primary: #284B63; /* Darker primary for header/footer */
        --secondary: #e6f7f2; /* Light background for some sections/dropdowns */
        --accent: #eb5e28;
        --bg: #f0f4f8; /* Light background for the body */
        --text-dark: #222;
        --text-light: #fff;
        --button-hover: #ca5123;
    }

    body {
        background-color: var(--bg);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--text-dark);
    }

    /* Header Styles */
    .header-custom {
        background: var(--primary);
        padding: 15px 20px;
        border-bottom: 1px solid #34495e;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

        .header-custom .navbar-brand {
            display: flex;
            align-items: center;
            font-size: 2.2rem;
            font-weight: 600;
            color: var(--text-light);
            line-height: 1;
        }

            .header-custom .navbar-brand .logo-icon {
                margin-right: 10px;
                color: var(--accent);
                font-size: 1em;
            }

            .header-custom .navbar-brand .brand-text-container {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                line-height: 1;
            }

            .header-custom .navbar-brand .brand-name-main {
                font-size: 1em;
                font-weight: 600;
                color: var(--text-light);
            }

            .header-custom .navbar-brand .tagline {
                font-size: 0.8rem;
                font-weight: 400;
                color: rgba(255, 255, 255, 0.7);
                margin-top: 2px;
            }

        .header-custom .navbar-nav .nav-link {
            color: var(--text-light) !important;
            margin: 0 15px;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: color 0.3s ease;
        }

            .header-custom .navbar-nav .nav-link:hover,
            .header-custom .navbar-nav .nav-link.active {
                color: var(--accent) !important;
            }

    .navbar-icon-spacing {
        margin-right: 10px;
    }

    /* Hero section (adapted for login/register layout) */
    .hero-section {
        background-color: #fffcf2;
        padding: 40px 0;
        min-height: calc(100vh - 70px - 50px); /* Adjust height for sticky header/footer */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-content h2 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 30px;
        color: var(--primary);
        margin-top: -230px;
    }

    .features-list {
        list-style: none;
        padding-left: 0;
        text-align: left;
    }

        .features-list li {
            margin-bottom: 10px;
        }

        .features-list p {
            font-size: 1.2rem;
            line-height: 1.7;
            color: var(--text-dark);
            margin-bottom: 0;
        }

    /* Form section */
    .form-section {
        background-color: rgba(0, 0, 0, 0.3); /* Semi-transparent black */
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 400px;
        text-align: center;
        color: #fff;
        justify-content: center;
    }

        .form-section h3 {
            color: var(--primary); /* Orange for heading */
            margin-bottom: 10px;
            font-weight: 600;
            text-align: center;
            font-size: 1.8rem;
        }

        .form-section p {
            color: var(--text-dark); /* Light text for description inside form */
            margin-bottom: 15px;
            margin-top: 0px;
            text-align: center;
        }

        .form-section .form-control,
        .form-section .form-select {
            border-radius: 5px;
            border: 2px solid #e0e0e0;
            padding: 12px 15px;
            margin-bottom: 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
            color: var(--text-dark); /* Ensure input text is dark */
        }

            .form-section .form-control:focus,
            .form-section .form-select:focus {
                border-color: var(--accent);
                box-shadow: 0 0 0 3px rgba(235, 94, 40, 0.1);
            }

        .form-section .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
            padding: 5px;
            font-size: 1rem;
            font-weight: 600;
            width: 50%;
            border-radius: 5px;
            transition: all 0.3s ease;
            color: var(--text-light);
            display: block;
            margin: 0 auto;
        }

            .form-section .btn-primary:hover {
                background-color: var(--button-hover);
                border-color: var(--button-hover);
                transform: translateY(-2px);
            }

            .form-section .btn-primary:focus {
                box-shadow: 0 0 0 3px rgba(235, 94, 40, 0.1);
            }

    .separator {
        display: flex;
        align-items: center;
        text-align: center;
        color: black; /* White for separator text */
        margin: 20px 0;
    }

        .separator::before,
        .separator::after {
            content: '';
            flex-grow: 1;
            background-color: black;
            height: 1px;
            margin: 0 10px;
        }

    .social-login button {
        background-color: #fff;
        color: #333;
        border: 1px solid #ddd;
        display: flex; /* Changed to flex for proper icon alignment */
        padding: 5px;
        font-size: 1rem;
        width: 100%;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .social-login button:hover {
            background-color: lightgrey;
        }

        .social-login button img {
            width: 20px;
            height: 20px;
            margin-right: 5px;
            vertical-align: middle;
        }

    .login-link {
        text-align: center;
        margin-top: 10px;
        color: black; /* Make the surrounding text light */
    }


    /* Footer Styles */
    footer {
        background-color: var(--primary);
        color: var(--text-light);
        text-align: center;
        padding: 15px;
        font-size: 14px;
    }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .hero-section

    {
        padding: 60px 0;
    }

    .info-content h2 {
        font-size: 2.5rem;
    }

    .header-custom .navbar-brand {
        font-size: 1.8rem;
        flex-direction: row;
        align-items: center;
    }

        .header-custom .navbar-brand .brand-text-container {
            align-items: flex-start;
        }

        .header-custom .navbar-brand .tagline {
            display: none;
        }

    .form-section {
        margin-top: 50px;
        padding: 30px;
    }

    }
</style>


<main class="hero-section">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 col-md-12 mb-4 mb-lg-0 info-content">
                <h2><strong>Welcome To <br> <b> FleetHub</b> </strong></h2>
                <ul class="features-list">
                    <li>
                        <p> Improve operational <b>efficiency</b>, reduce operating costs, and enhance overall fleet performance.</p>
                    </li>
                    <li>
                        <p> Gain complete <b>control</b> over all vehicle movements and activities.</p>
                    </li>
                    <li>
                        <p> <b>Streamline communication</b> and dispatch processes for <b>improved coordination.</b></p>
                    </li>
                </ul>
            </div>

            <div class="col-lg-6 col-md-12">
                <div class="form-section">
                    <h3>Register for FleetHub account</h3>
                    <p>Please Enter your details below to get started.</p>


                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label text-start d-block"><b>Full Name</b></label>
                            @*
                                The default RegisterModel.InputModel in ASP.NET Core Identity does not
                                include 'FullName', 'FirstName', or 'LastName' properties.
                                To capture this field during registration, you will need to:
                                1. Add a property (e.g., 'FullName' or 'FirstName' and 'LastName') to
                                   the InputModel nested class in Areas/Identity/Pages/Account/Register.cshtml.cs.
                                2. Update the OnPostAsync method in Register.cshtml.cs to read this value
                                   from Input and save it to your ApplicationUser properties (e.g., FirstName, LastName).
                            *@
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Full Name" required>
                            @* If you add Input.FullName/FirstName/LastName, change above to asp-for="Input.FullName" and add asp-validation-for *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-start d-block"><b>Email</b></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter Email Address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-start d-block"><b>Password</b></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-start d-block"><b>Confirm Password</b></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

                        <div class="separator">Or Login</div>
                        <div class="social-login">
                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form id="external-account" asp-page-handler="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            @if (provider.DisplayName == "Google") // Customize for specific providers if needed
                                            {
                                                <button type="submit" class="btn btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                    <img src="https://fonts.gstatic.com/s/i/productlogos/googleg/v6/24px.svg" alt="Google logo">
                                                    Continue with @provider.DisplayName
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                    Register with @provider.DisplayName
                                                </button>
                                            }
                                        }
                                    </div>
                                </form>
                            }

                        </div>
                        <div class="login-link">
                            Already have an account? <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-sm btn-outline-primary-custom">Log In Here!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}
